#include "libft.h"

void	*ft_memchr(const void *s, int c, size_t n)
{
	const char		*tmp;
	unsigned char	ch;
	size_t			i;

	tmp = s;
	ch = c;
	i = 0;
	while (i < n)
	{
		if (*tmp == ch)
			return ((void *)tmp);
		else
			tmp++;
		i++;
	}
	return (NULL);	
}

int	main(void)
{
	int  ch1= 'i', ch2 = 'a';
	char text[] = "C programming language.";

	char *pdest;
   int result;
	printf("Original string:  %s\n", text);
	printf("\n\nCheck the character %c present in the said text!",ch1);
   pdest = (char *)memchr(text, ch1, strlen(text));
   result = (int)(pdest - text + 1);
   if ( pdest != NULL )
      printf( "\n%c found at position %d\n", ch1, result );
   else
      printf("\n%c not found!",ch1 );
   printf("\n\nCheck the character %c present in the said text!",ch2);
   pdest = (char *)memchr(text, ch2, strlen(text));
   result = (int)(pdest - text + 1);
   if ( pdest != NULL )
      printf( "\n%c found at position %d\n", ch2, result );
   else
      printf("\n%c not found!",ch2);
   printf("memchr:  %s\n", memchr(text, ch1, strlen(text)));
   printf("memchr:  %s\n", memchr(text, ch2, strlen(text)));

   char *pdest1;
   int result1;
   printf("Original String: %s", text );
   printf("\n\nCheck the character %c present in the said text!",ch1);
   pdest1 = (char *)ft_memchr(text, ch1, strlen(text));
   result1 = (int)(pdest1 - text + 1);
   if ( pdest1 != NULL )
      printf( "\n%c found at position %d\n", ch1, result1 );
   else
      printf("\n%c not found!",ch1 );
   printf("\n\nCheck the character %c present in the said text!",ch2);
   pdest1 = (char *)ft_memchr(text, ch2, strlen(text));
   result1 = (int)(pdest1 - text + 1);
   if ( pdest1 != NULL )
      printf( "\n%c found at position %d\n", ch2, result1 );
   else
      printf("\n%c not found!",ch2);
   printf("ft_memchr:  %s\n", ft_memchr(text, ch1, strlen(text)));
   printf("ft_memchr:  %s\n", ft_memchr(text, ch2, strlen(text)));

 return 0;
}
